{% extends "MopaBootstrapSandboxBundle::layout.html.twig" %}
{% from 'MopaBootstrapBundle::flash.html.twig' import session_flash %}

{% block headline %}Forms Example{% endblock headline %}

{% block content %}
    <div class="col-sm-3">
        <h3>Basic form</h3>
        <p>With v2.0, we have lighter and smarter defaults for form styles. No extra markup, just form controls.</p>
    </div>
    <div class="col-sm-9">
        <form class="well">
              {{ form_widget(form) }}
              <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>
    <h3>Search form</h3>
    <div class="row">
        <div class="col-sm-3">
          <p>Reflecting default WebKit styles, just add <code>.form-search</code> for extra rounded search fields.</p>
        </div>
        <div class="col-sm-9">
          <form class="well">
              {{ form_widget(searchform) }}
              <button type="submit" class="btn btn-primary">Submit</button>
          </form>
        </div>
    </div>
    <h3>Inline form</h3>
    <div class="row">
        <div class="col-sm-3">
          <p>Inputs are block level to start. For <code>.form-inline</code> and <code>.form-horizontal</code>, we use inline-block.</p>
        </div>
        <div class="col-sm-9">
          <form class="well form-inline">
              {{ form_widget(inlineform) }}
              <button type="submit" class="btn btn-primary">Submit</button>
          </form>
        </div>
{% endblock content %}

{% set showTemplate = _self %}{% set showForm = formType %}
